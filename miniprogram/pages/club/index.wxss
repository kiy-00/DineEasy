.club-page {
  padding: 10px;
  background-color: #f9e6ef; /* Lighter shade of #e89abe */
}
.vip-info 
{
  background-color: white;
  border-radius: 10px;
  height: 110px;
}

.vip-info .label {
  display: block;
  background-color: #e89abe;
  color: white;
  width: 60px;
  border-radius: 10px 0 10px 0;
  padding: 2px;
  font-size: 12px;
  text-align: center;
}

.card-exp-container {
  display: flex;
  flex-grow: 1;
  align-items: center;
}

.vip-info .card {
  width: 70px;
  height: 50px;
  margin: 10px;
}

.title-exp {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.current-level {
  font-weight: bold;
  margin-bottom: 5px;
  color: #e89abe;
}

.balance .title {
  font-size: 12px;
  color: #707070;
}

.balance .content {
  font-size: 12px;
  color: #e89abe;
}

.exp-text .title {
  font-size: 12px;
  color: #707070;
}

.exp-text .content {
  font-size: 12px;
  color: #e89abe;
}

.exp-bar-background {
  width: 200px;
  height: 8px;
  background-color: #e0e0e0;
  border-radius: 4px;
}

.exp-bar-fill {
  height: 8px;
  background-color: #e89abe;
  border-radius: 4px;
}

.sub-title
{
  background-color: #e89abe;
  color: white;
  width: 75px;
  text-align: center;
  border-radius: 10px 0 10px 0;
  padding: 2px;
  margin: 10px 0;
}

.recharge
{
  display: flex;
  flex-direction: column;
  background-color: white;
  border-radius: 10px;
  height: 180px;
}

.recharge view
{
  height:33.3%;
}

.recharge .title
{
  display: block;
  font-size: 14px;
  margin: 5px 10px;
  color: #707070;
}

.recharge .demand
{
  display: block;
  font-size: 12px;
  margin: 5px 10px;
  color: #e89abe;
}

.recharge .gold-card,
.recharge .silver-card {
  border-bottom: 1px solid #f7dce8; /* 设置下边框线，可以调整颜色和厚度 */
}

.recharge .gold-card,
.recharge .silver-card,
.recharge .normal-card {
  position: relative; /* 确保父容器是相对定位 */
  padding-right: 20px; /* 给箭头留出足够的空间 */
}

.recharge .gold-card::after,
.recharge .silver-card::after,
.recharge .normal-card::after {
  content: ">";
  position: absolute;
  right: 10px; /* 根据需要调整箭头到容器右侧的距离 */
  top: 50%;
  transform: translateY(-50%);
  font-size: 16px; /* 调整字体大小以符合设计 */
  color: #707070; /* 设定箭头颜色 */
}

.benefits-view {
  background-color: white;
  padding: 10px;
  border-radius: 10px;
  font-size: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); /* 可选：添加阴影以提升视觉效果 */
  color: #707070;
}

.student-privilege
{
  display: flex;
  background-color: white;
  border-radius: 10px;
}

.student-privilege .student-icon
{
  width: 50px;
  height: 50px;
  margin: 10px;
}

.student-privilege .student-info
{
  display: flex;
  flex-direction: column;
}

.student-info .status
{
  background-color: #e89abe;
  margin: 10px;
  width: 40px;
  font-size: 12px;
  text-align: center;
  padding: 2px;
  border-radius: 5px;
  color: white;
}

.student-info .title
{
  font-size: 12px;
  margin-left: 10px;
  color: #707070;
}

.student-info .content
{
  font-size: 12px;
  color: #e89abe;
}

.student-privilege
{
  position: relative;
}

.student-privilege::after
{
  content: ">";
  position: absolute;
  right: 10px; /* 根据需要调整箭头到容器右侧的距离 */
  top: 50%;
  transform: translateY(-50%);
  font-size: 16px; /* 调整字体大小以符合设计 */
  color: #707070; /* 设定箭头颜色 */
}

.activities-section {
  padding: 10px;
}

.activity-swiper {
  width: 100%;
  height: 150px; /* 根据实际需求调整 */
}

.swiper-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.discounts-list {
  padding-top: 10px;
}

.discount-item {
  padding: 10px;
  background-color: white;
  border-bottom: 1px solid #eee; /* 为每个优惠信息添加底部边框 */
}

.discount-title {
  font-size: 14px;
  color: #707070; /* 标题颜色，示例为红色 */
}

.discount-detail {
  font-size: 12px;
  color: #e89abe;
  margin-left: 10px;
}

.regular-list {
  background-color: white;
}
.regular-list .regular-item
{
  font-size: 12px;
  color: #707070;
  padding: 10px;
  border-bottom: 1px solid #f7dce8;
}




