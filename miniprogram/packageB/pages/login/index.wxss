/* login.wxss */

.background-container {
  position: relative;
  width: 100%;
  height: 200px; /* 根据实际需求调整高度 */
  overflow: hidden; /* 防止内容溢出 */
  margin: 10px 0;
}

.background {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  transform: translate(-50%, -50%);
  object-fit: contain; /* 保持图片比例 */
}

.login-page {
  padding: 20px;
  background-color: #f9e6ef; /* 示例背景颜色 */
}

.title {
  text-align: center;
  font-size: 24px;
  color: #e89abe;
  margin-bottom: 20px;
}

.or-separator {
  text-align: center;
  font-size: 18px;
  color:#e89abe;
  margin: 10px 0;
}

form {
  display: flex;
  flex-direction: column;
}

input {
  padding: 10px;
  margin: 10px 0;
  border: 1px solid #ccc;
  border-radius: 10px;
  font-size: 14px;
}

button {
  padding: 10px;
  margin: 10px 0;
  background-color: #e89abe;
  color: white;
  border-radius: 5px;
  cursor: pointer;
}

button text {
  font-size: 14px;
  font-weight: normal;
}
